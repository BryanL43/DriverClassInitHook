# https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C/C++ code formatting
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4
cpp_space_pointer_reference_alignment = right
